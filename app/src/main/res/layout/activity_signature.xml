<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signature"
    android:orientation="vertical"
    tools:context=".Signature">

    <Button
        android:id="@+id/clear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#49A5A6"
        android:fontFamily="@font/helveticaroundedbold"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="3"
        android:shadowRadius="50"
        android:text="CLEAR"
        android:textColor="@color/white"
        android:textColorHighlight="#49A5A6"
        app:layout_constraintBottom_toTopOf="@+id/signature_pad_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signature_pad_1"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/clear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#49A5A6"
        android:fontFamily="@font/helveticaroundedbold"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="3"
        android:shadowRadius="50"
        android:text="CLEAR"
        android:textColor="@color/white"
        android:textColorHighlight="#49A5A6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signature_pad_2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/geratepdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#49A5A6"
        android:fontFamily="@font/helveticaroundedbold"
        android:gravity="center"
        android:onClick="createMyPDF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="3"
        android:shadowRadius="50"
        android:text="GENERATE PDF"
        android:textColor="@color/white"
        android:textColorHighlight="#49A5A6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear2"
        app:layout_constraintVertical_bias="0.55"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/back4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#49A5A6"
        android:fontFamily="@font/helveticaroundedbold"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="3"
        android:shadowRadius="50"
        android:text="BACK"
        android:textColor="@color/white"
        android:textColorHighlight="#49A5A6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/geratepdf"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear2"
        app:layout_constraintVertical_bias="0.55"
        tools:ignore="TextContrastCheck" />

    <com.github.gcacace.signaturepad.views.SignaturePad
        android:id="@+id/signature_pad_1"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:background="@drawable/custom_input"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22000003"
        app:penColor="@android:color/black" />

    <TextView
        android:id="@+id/classicsignature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3E9498"
        android:backgroundTint="#13A8A8"
        android:fontFamily="@font/helveticaroundedbold"
        android:shadowColor="#787474"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Auth. Signatory for Classic Automation and Control"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/signature_pad_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.65"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/companysignature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3E9498"
        android:backgroundTint="#13A8A8"
        android:fontFamily="@font/helveticaroundedbold"
        android:shadowColor="#787474"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Auth. Signatory for Company"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/signature_pad_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signature_pad_1"
        app:layout_constraintVertical_bias="0.93"
        tools:ignore="TextContrastCheck" />

    <com.github.gcacace.signaturepad.views.SignaturePad
        android:id="@+id/signature_pad_2"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:background="@drawable/custom_input"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69"
        app:penColor="@android:color/black" />



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="head"
        android:scaleX=".9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cover" />



</androidx.constraintlayout.widget.ConstraintLayout>