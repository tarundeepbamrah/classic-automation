<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Classic" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/turqoise</item>
        <item name="colorPrimaryVariant">@color/turqoise</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/turqoise</item>
        <item name="colorSecondaryVariant">@color/turqoise</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Checkbox colors -->
    <style name="colored_checkbox" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

</resources>